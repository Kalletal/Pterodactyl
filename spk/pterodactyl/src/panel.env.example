# -----------------------------------------------------------------------------
# Core package wiring
# -----------------------------------------------------------------------------
COMPOSE_PROJECT=pterodactyl
PACKAGE_TARGET=/var/packages/pterodactyl/target
PACKAGE_DATA=/var/packages/pterodactyl/var
DATA_ROOT=/var/packages/pterodactyl/var/data
LOG_ROOT=/var/packages/pterodactyl/var/logs

# -----------------------------------------------------------------------------
# System prerequisites
# -----------------------------------------------------------------------------
# This SPK dépend de php83 (SynoCommunity) avec les extensions CLI suivantes :
# openssl, gd, mysql, PDO, mbstring, tokenizer, bcmath, xml, curl, zip.
# Assurez-vous également que composer v2, curl, tar, unzip et git sont disponibles
# pour les tâches artisan/composer. MariaDB >=10.2 et Redis >=7.2 sont fournis
# via docker-compose par défaut mais peuvent être externes.

# -----------------------------------------------------------------------------
# Docker images (override to pin internal registries)
# -----------------------------------------------------------------------------
PANEL_IMAGE=ghcr.io/pterodactyl/panel:1.11.6
WINGS_IMAGE=ghcr.io/pterodactyl/wings:v1.11.5
MARIADB_IMAGE=mariadb:10.11
REDIS_IMAGE=redis:7.2-alpine

# -----------------------------------------------------------------------------
# Pterodactyl panel
# -----------------------------------------------------------------------------
APP_ENV=production
APP_URL=https://nas.local:8080
APP_TIMEZONE=Europe/Paris
APP_SERVICE=nginx
APP_KEY=CHANGE_ME
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_THEME=default
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_SECURE_COOKIE=true
TRUSTED_PROXIES=*
LOG_CHANNEL=daily
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Panel networking
# -----------------------------------------------------------------------------
PANEL_HTTP_PORT=8080
WINGS_DAEMON_PORT=8081
PANEL_SOURCE_PORT=80
WINGS_SOURCE_PORT=8080

# -----------------------------------------------------------------------------
# Database (MariaDB >=10.2)
# -----------------------------------------------------------------------------
DB_HOST=panel-db
DB_PORT=3306
DB_DATABASE=pterodactyl
DB_USERNAME=pterodactyl
DB_PASSWORD=changeMeNow!
DB_ROOT_PASSWORD=ChangeRootPassword!
DB_MAX_CONNECTIONS=150

# -----------------------------------------------------------------------------
# Redis (>=7.2 recommandé)
# -----------------------------------------------------------------------------
REDIS_HOST=panel-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# Mailer
# -----------------------------------------------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST=mail.example.tld
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=pterodactyl@example.tld
MAIL_FROM_NAME="Pterodactyl Panel"

# -----------------------------------------------------------------------------
# Wings bootstrap
# -----------------------------------------------------------------------------
WINGS_FQDN=nas.local
WINGS_TOKEN=CHANGEME_TOKEN
WINGS_PANEL_URL=https://nas.local:8080
WINGS_CONFIG_PATH=/var/packages/pterodactyl/var/data/wings/config.yml

# -----------------------------------------------------------------------------
# Backups + media
# -----------------------------------------------------------------------------
BACKUP_ROOT=/var/packages/pterodactyl/var/data/backups
