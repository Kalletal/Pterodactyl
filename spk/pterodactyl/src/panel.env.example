# -----------------------------------------------------------------------------
# Core package wiring
# -----------------------------------------------------------------------------
COMPOSE_PROJECT=pterodactyl_panel
PACKAGE_TARGET=/var/packages/pterodactyl_panel/target
PACKAGE_DATA=/var/packages/pterodactyl_panel/var
DATA_ROOT=/var/packages/pterodactyl_panel/var/data
LOG_ROOT=/var/packages/pterodactyl_panel/var/logs

# -----------------------------------------------------------------------------
# System prerequisites
# -----------------------------------------------------------------------------
# This SPK requires ContainerManager (Docker) only.
# PHP 8.3 is included in the Panel Docker image (ghcr.io/pterodactyl/panel).
# MariaDB >=10.2 and Redis are provided via docker-compose containers.

# -----------------------------------------------------------------------------
# Docker images (override to pin internal registries)
# -----------------------------------------------------------------------------
PANEL_IMAGE=ghcr.io/pterodactyl/panel:latest
MARIADB_IMAGE=mariadb:10.5
REDIS_IMAGE=redis:alpine

# -----------------------------------------------------------------------------
# Pterodactyl panel
# -----------------------------------------------------------------------------
APP_ENV=production
APP_URL=https://nas.local:8080
APP_TIMEZONE=Europe/Paris
APP_SERVICE=nginx
APP_KEY=CHANGE_ME
APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_THEME=default

# -----------------------------------------------------------------------------
# Admin user (created on first startup)
# -----------------------------------------------------------------------------
APP_SETUP_ADMIN=true
APP_SETUP_ADMIN_EMAIL=admin@example.com
APP_SETUP_ADMIN_USERNAME=admin
APP_SETUP_ADMIN_FIRSTNAME=Admin
APP_SETUP_ADMIN_LASTNAME=User
APP_SETUP_ADMIN_PASSWORD=ChangeMe123!
CACHE_DRIVER=redis
QUEUE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_SECURE_COOKIE=false
TRUSTED_PROXIES=*
LOG_CHANNEL=daily
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Panel networking
# -----------------------------------------------------------------------------
PANEL_HTTP_PORT=38080
WINGS_DAEMON_PORT=8443

# -----------------------------------------------------------------------------
# Database (MariaDB >=10.2)
# -----------------------------------------------------------------------------
DB_HOST=panel-db
DB_PORT=3306
DB_DATABASE=pterodactyl
DB_USERNAME=pterodactyl
DB_PASSWORD=changeMeNow!
DB_ROOT_PASSWORD=ChangeRootPassword!
DB_MAX_CONNECTIONS=150

# -----------------------------------------------------------------------------
# Redis (>=7.2 recommand√©)
# -----------------------------------------------------------------------------
REDIS_HOST=panel-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# Mailer
# -----------------------------------------------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST=mail.example.tld
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=pterodactyl@example.tld
MAIL_FROM_NAME="Pterodactyl Panel"

# -----------------------------------------------------------------------------
# Wings bootstrap
# -----------------------------------------------------------------------------
WINGS_FQDN=nas.local
WINGS_TOKEN=CHANGEME_TOKEN
WINGS_PANEL_URL=https://nas.local:8080
WINGS_CONFIG_PATH=/var/packages/pterodactyl_panel/var/data/wings/config.yml

# -----------------------------------------------------------------------------
# Backups + media
# -----------------------------------------------------------------------------
BACKUP_ROOT=/var/packages/pterodactyl_panel/var/data/backups
